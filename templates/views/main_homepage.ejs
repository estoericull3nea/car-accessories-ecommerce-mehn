<html lang="en">
  <head>
    <!-- {{>head}} -->
    <%- include("partials/head") %>
    <link rel="stylesheet" href="css/homepage.css" />
  </head>
  <body class="light">
    <%- include("partials/header") %>
    <!-- {{>header}} -->

    <section class="homepage">
      <div class="left-container">
        <h1>
          Stylish & <span>High Performance Car Accessories Essentials</span>
        </h1>
        <p>
          We're thrilled to have you here, ready to embark on an incredible
          shopping experience.
        </p>
        <h3>Involve. Inspire. Indulge.</h3>
        <button class="btn shop_now">Shop Now</button>
      </div>

      <div class="right-container">
        <div class="img-con">
          <img src="../images/main.jpg" alt="empty_cart" loading="lazy" />
        </div>
      </div>
    </section>

    <%- include("partials/ads") %>

    <section class="cart" id="cart-section">
      <% if (prods != '') { %>
      <h1 class="nameOfHeader">List Items</h1>

      <% for(let p of prods) {%>
      <div class="box">
        <div class="top">
          <img src="<%= p.imgURL%>" alt="" />
        </div>
        <div class="bottom">
          <h3><%= p.title%></h3>
          <h4><%= p.price%></h4>
          <h4><%= p.quantity%></h4>
          <p class="descript"><%= p.description%></p>

          <form action="/add-to-cart" method="post">
            <input type="hidden" name="id" value="<%=p.id%>" />
            <button class="addToCart" type="submit">Add To Cart</button>
          </form>
        </div>
      </div>
      <% } %> <% } else { %>
      <div class="empty-list-controller">
        <img
          src="/images/empty-list-illustration.png"
          alt="empty_list"
          loading="lazy"
        />
        <h1 class="nameOfHeader">Empty List</h1>
      </div>
      <% } %>
    </section>

    <%- include("partials/footer") %>
  </body>
</html>
