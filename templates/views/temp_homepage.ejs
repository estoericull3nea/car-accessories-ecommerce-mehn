<html lang="en">
  <!-- {{>head}} -->
  <%- include("partials/head") %>
  <body class="light test">
    <header>
      <div class="logo-container">
        <p class="logo-text">EA</p>
        <a class="logo-item" href="#home"
          ><img src="../icons/tire_transparent.png" alt=""
        /></a>
      </div>

      <ul class="navlist">
        <li><a href="/home">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/about_us">About Us</a></li>
        <li><a href="/contact-us">Our Team</a></li>
      </ul>

      <div class="btn-container">
        <div class="menu-container">
          <i class="bx bx-menu-alt-right"></i>
        </div>

        <div class="cart-container">
          <i class="bx bx-cart"></i>
        </div>
      </div>
    </header>

    <section class="homepage">
      <div class="left-container">
        <h1>
          Stylish & <span>High Performance Car Accessories Essentials</span>
        </h1>
        <p>
          We're thrilled to have you here, ready to embark on an incredible
          shopping experience.
        </p>
        <h3>Involve. Inspire. Indulge.</h3>
      </div>

      <div class="right-container">
        <div class="img-con">
          <img src="../images/main.jpg" alt="" />
        </div>
      </div>
      <div class="signin pop-up">
        <form action="/login" method="POST">
          <h1>Sign In</h1>

          <div class="box">
            <div class="input-control">
              <i class="bx bx-envelope"></i>
              <input
                type="text"
                placeholder="example@gmail.com *"
                name="email"
                autofocus
                required
              />
            </div>
            <div class="input-control">
              <i class="bx bx-lock-alt"></i>
              <input
                type="password"
                placeholder="Password *"
                name="password"
                required
              />
            </div>

            <button class="btnSignIn">Sign In</button>

            <div class="lower">
              <span>Don't have an account?</span>
              <button class="btnRegister">Create</button>
            </div>
          </div>
        </form>
      </div>
    </section>
  </body>
</html>
