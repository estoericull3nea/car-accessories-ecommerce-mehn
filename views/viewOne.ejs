<html lang="en">
  <head>
    <%- include("partials/head") %>

    <style>
      

      .col-sm-4 {
        width: 260px;
        padding: 1rem;
      }

      .product-header {
        font-family: 'Cabin Sketch', cursive;
        margin-top: 2rem;
      }

      .card-similar {
        height: 450px;
        width: 330px !important;

        position: relative;
      }


      .parent {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        place-items: center;

        margin-inline: 5%;
        margin-top: 2rem;
      }

      .card-img-top {
        height: 130px;
      }

      .card {
        position: relative;
        cursor: pointer;
        transition: transform 200ms ease;
        height: 300px;
      }

      .card:hover {
        transform: scale(1.039);
      }

      .btn-primary {
        position: relative;
      }

     
      .parent .card .bookmark {
        position: absolute;
        top: 5px;
        right: 5px;
    }

    /* card body */
    .card-title {
    margin: 0;
    margin-top: .8rem;
    }

    p {
        margin-top: 0;
        margin-bottom: 0;
        font-size: .8rem;
    }

    .btn {
      position: absolute;
      bottom: 15px;
      left: 15px;
    }

    .parent-2 {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        place-items: center;

        margin-inline: 5%;
        margin-top: 2rem;

      border: 2px solid black;
      border-radius: 5px;
      box-shadow: rgba(200, 164, 137, 0.25) 0px 30px 60px -12px inset, rgba(227, 214, 159, 0.3) 0px 18px 36px -18px inset;
      }

    .parent-2 img {
      height: 400px;
    }

   .btn-single {
      all: unset;
      padding: 10px 15px;
      border-radius: 5px;
      color: white;
    }

    .parent-2 .card-body {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .product-header-similar {
      margin-top: 5rem;
    }

   

    </style>
  </head>
  <body>
    <%- include("partials/header") %>
    <h1 class="container product-header">Product</h1>
  
    <div class="parent-2">
      <img src="<%= product.imgURL %>" class="card-img-top" alt="<%= product.imgURL %>" />
      <div class="card-body">
       
        <h1 class="card-title"><%= product.title %></h1>
        <p class="card-text">
          ₱ <%= product.price %>
        </p>
        <p class="card-text">
          <%= product.descFull %>
        </p>
        
          <form action="/auth" method="POST">
            <input type="hidden" name="id" value="<%= product.id %>">
            <button type="submit" href="#" class="btn btn-primary btn-brown btn-single" >Add to cart</button>
          </form>
         
      </div>
    </div>
   

    

    <!--  -->
    <h1 class="container product-header product-header-similar">Similar Products</h1>
    <div class="parent">
      <% for(let i=0; i<similarProds.length; i++) { %>
    <% if(product.id === similarProds[i].id) { %>
      <% continue; %>
   <% } else { %>
 

    <a  href="/products/<%=similarProds[i].id%>" class="card" style="width: 18rem">
           
      <span class="bookmark" title="bookmark">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#8f4f07" class="bi bi-bookmark-plus-fill" viewBox="0 0 16 16" >
          <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
        </svg>
      </span>
    
   
  <img src="<%= similarProds[i].imgURL %>" class="card-img-top" alt="<%= similarProds[i].imgURL %>" />
  <div class="card-body">
   
    <h5 class="card-title"><%= similarProds[i].title %></h5>
    <p class="card-text">
      ₱ <%= similarProds[i].price %>
    </p>
    <p class="card-text">
      <%= similarProds[i].description %>
    </p>
    
      <form action="/auth" method="POST">
        <input type="hidden" name="id" value="<%= similarProds[i].id %>">
        <button type="submit" href="#" class="btn btn-primary btn-brown" >Add to cart</button>
      </form>
     
  </div>
</a>
  <% } %>
          
     <% } %>
    </div>

  

    %> <%- include("partials/footer") %>
  </body>
</html>
