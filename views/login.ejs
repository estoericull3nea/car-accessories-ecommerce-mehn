<html lang="en">
  <head>
    <!-- {{>head}} -->
    <%- include("partials/head") %>
    <style>
      * {
        font-family: 'Nunito', sans-serif;
      }

      .login,
      .register {
        width: 100%;
      }

      body {
        display: grid;
        place-content: center;
      }

      form {
        width: 350px;
      }

      .alert-danger {
        height: 40px;
      }

      .alert-success {
        height: 40px;
      }

      .btn-close {
        font-size: 0.6rem;
        height: 0px;
      }

      .p-error {
        position: relative;
        top: -8px;
      }

      .btn-brown {
        border: 1px solid #8f4f07;
        background: #8f4f07;
      }

      .btn-brown:hover {
        background: transparent;
        border: 1px solid #8f4f07;
        color: black;
      }
    </style>
  </head>
  <body class="light">
    <div class="container pt-5 border border-black rounded">
      <h1 class="text-center mb-0">Sign In</h1>
      <form action="/auth/login" method="POST" class="pt-3 p-3">
        <!-- error -->
        <%- include('./partials/messages') %>
        <!-- end error -->
        <div class="mb-3">
          <label class="form-label mb-0">Email address</label>
          <input
            type="email"
            class="form-control"
            name="email"
            value="<%= typeof email != 'undefined' ? email : ''%>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label mb-0">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            value="<%= typeof password != 'undefined' ? password : ''%>"
          />
        </div>

        <button type="submit" class="btn btn-success login btn-brown">
          Login
        </button>

        <p class="mt-2 mb-0">Dont' have an account?</p>
        <p>
          <a href="/auth/register" class="btn btn-outline-dark register">
            Register
          </a>
        </p>
      </form>
    </div>
  </body>
</html>
