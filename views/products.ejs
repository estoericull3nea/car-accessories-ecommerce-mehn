<html lang="en">
  <head>
    <!-- {{>head}} -->
    <%- include("partials/head") %>
    
    <style>
      .parent {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        place-items: center;

        margin-inline: 5%;
        margin-top: 2rem;
      }
      .card-img-top {
        height: 200px;
      }

      .card {
        position: relative;
        height: 400px;
        cursor: pointer;

      }
      .btn-primary {
        position: relative;
      }

      .buttons {
        display: flex;
        justify-content: space-around;

        position: absolute;
        bottom: 15px;
      }

      .buttons .btn:first-child {
        margin-right: 1.5rem;
      }

      /* btn */
      .btn-brown {
        border: 1px solid #8f4f07;
        background: #8f4f07;
      }

      .btn-brown:hover {
        background: transparent;
        border: 1px solid #8f4f07;
        color: black;
      }
    </style>
  </head>
  <body class="light">
    <%- include("partials/header") %>
    <%- include("partials/ads") %>
    
    
    <div class="parent">
    <% for(let i=0; i<product.length; i++) { %>
        <div class="card" style="width: 18rem">
          <img src="<%= product[i].imgURL %>" class="card-img-top" alt="<%= product[i].imgURL %>" />
          <div class="card-body">
            <h5 class="card-title"><%= product[i].title %></h5>
            <p class="card-text">
              â‚± <%= product[i].price %>
            </p>
            <p class="card-text">
              <%= product[i].description %>
            </p>
            <div class="buttons">
              <form action="/products/<%=product[i]._id%>" method="GET">
                 <button href="#" class="btn btn-outline-dark">View Details</button>
              </form>
              <button type="submit" href="#" class="btn btn-primary btn-brown">Add to cart</button>
            </div>
             
          </div>
        </div>
   <% } %>
  </div>

   

    %> <%- include("partials/footer") %>
  </body>
</html>
