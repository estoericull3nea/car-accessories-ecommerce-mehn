<% if(typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
<div class="alert alert-danger alert-dismissible fade show mb-1" role="alert">
  <p class="mb-0 p-error"><%= error.msg %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% }) %> <% } %>

